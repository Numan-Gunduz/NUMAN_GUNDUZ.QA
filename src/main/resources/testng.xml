<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Insider UI Automation Suite" verbose="1" parallel="false">

    <!-- Listenerlar: Allure + Screenshot -->
    <listeners>
        <listener class-name="core.listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="All UI Tests">
        <packages>
            <!-- Senin test sınıfların direkt 'tests' paketinde -->
            <package name="tests"/>
        </packages>
    </test>

</suite>
